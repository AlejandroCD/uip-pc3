<DrawingSpace>:
	canvas.before:
		Color:
			rgba: 1,0,0,1
		Rectangle:
			pos: 0,0
			size: 100,100
	canvas:
		Color:
			rgba: 0,1,0,1
		Rectangle:
			pos: 100,0
			size: 100,100
	canvas.after:
		Color:
			rgba: 0,0,1,1
		Rectangle:
			pos: 200,0
			size: 100,100
	Button:
		text: 'Un texto muy largo"
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		size_hint: 0.9,0.1
